<header class="page-header">
    <div class="wrapper">
        <h2 class="page-title">
            {{name}}
        </h2>
    </div>
</header>

<div class="wrapper">
    <section class="information">
        <h3 class="sr-only">Information</h3>
        <div class="information__img">
            <img src="{{image}}" alt="{{image_alt}}">
        </div>

        <div class="information__content">
            <section>
                <h4><span class="sr-only">Location</span> <i class="fa fa-location-arrow"></i></h4>
                <p>{{location.address_line_1}},</p>
                <p>{{location.area}},</p>
                <p>Lagos, Nigeria</p>
            </section>
            <section>
                <h4><span class="sr-only">Cuisine</span> <i class="fa fa-cutlery"></i></h4>
                <p>{{cuisine}}</p>
            </section>
            <section>
                <h4><span class="sr-only">Opening Hours</span> <i class="fa fa-clock-o"></i></h4>
                <table class="opening-hours">
                    <thead class="sr-only">
                        <tr>
                            <th>Day</th>
                            <th>Times</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each opening_hours}}
                        <tr>
                            <td class="day">{{day}}</td>
                            <td class="hours">{{start}} - {{end}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </section>
        </div>        
    </section>
    <ul class="restaurants" id="restaurants">
        <!-- Default message -->         
    </ul>
</div>


<section class="reviews">
    <div class="wrapper">
        <h3 class="page-title-lv2 reviews-header">Reviews</h3>
        <button class="open-review-dialog floating-btn" type="button" aria-label="Open Dialog to Add a Review">
                <i class="fa fa-pencil"></i>
            </button>
    </div>

    <div class="reviews-list">
        <div class="wrapper ul-reviews">
            {{#each reviews}}
            <article class="review">
                <p class="review__author" rel="author">{{name}}</p>
                <time class="review__date">{{momentDate date}}</time>
                <p class="review__stars">
                    <span class="sr-only">{{stars}} out of 5 Stars</span>
                    {{reviewStars stars}}
                </p>
                <p class="review__text">{{review}}</p>
            </article>
            {{/each}}
        </div>
    </div>
</section>

